/* components/toast/toast.wxss */

.toast-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0;
  z-index: 90;
}
.toast-content {
  min-width: 200rpx;
  max-width: 500rpx;
  min-height: 200rpx;
  background: rgba(0, 0, 0, 0.7);
  box-shadow: 0px 0rpx 30rpx 2rpx rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  position: fixed;
  top: 45%;
  left: 50%;
  z-index: 90;
  transform:  translate(-50%, -50%); 
}

.toast-image {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
  /* background-color: blue;  */
}

.toast-text {
  margin: 10rpx;
  text-align: center;
  font-size: 30rpx;
  color: white;
  padding-left: 10rpx;
  padding-right: 10rpx;
  
}
